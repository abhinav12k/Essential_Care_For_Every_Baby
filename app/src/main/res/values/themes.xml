<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EssentialCareForEveryBaby" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_blue_color</item>
        <item name="colorPrimaryVariant">@color/theme_blue_dark_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_blue_secondary_color</item>
        <item name="colorSecondaryVariant">@color/theme_blue__secondary_dark_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Button Container Style for Auth Fragment-->
    <style name="AuthFragmentButtonContainerStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Button Text Style for Auth Fragment-->
    <style name="AuthFragmentButtonTextStyle">
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="lineSpacing">21dp</item>
    </style>

    <!-- Edit Text Style for Signin Fragment-->
    <style name="SigninFragmentEditTextStyle">
        <item name="android:layout_marginStart">24dp</item>
        <item name="cardCornerRadius">34dp</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <!-- Button Container Style for Main Fragment-->
    <style name="MainFragmentButtonContainerStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
    </style>

</resources>